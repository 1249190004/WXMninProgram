<!--components/swiper/swiper.wxml-->
<swiper class="swiper" 
        circular 
        autoplay 
        interval="3000"
        indicator-active-color="#ff5777"
        indicator-dots
>
  <block wx:for="{{banners}}" 
        wx:key="index" >
    <swiper-item class="swiper-item">
      <image src="{{item.image}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>
